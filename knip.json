{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["**/*.css", "packages/cron/src/jobs/**/*"],
  "ignoreBinaries": [],
  "ignoreDependencies": ["@svgr/webpack"],
  "ignoreWorkspaces": ["packages/typescript-config"],
  "workspaces": {
    "packages/*": {
      "project": "src/**/*.{ts,tsx}"
    },
    "packages/api": {
      "entry": ["src/routes/**/*.ts"],
      "project": "src/**/*.{ts,tsx}"
    },
    "packages/cron": {
      "entry": ["src/jobs/*.ts"],
      "project": "src/**/*.{ts,tsx}"
    }
  }
}
